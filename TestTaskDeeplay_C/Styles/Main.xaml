<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Menu">
        <Style.Triggers>
            <Trigger Property="IsMainMenu" Value="true">
                <Setter Property="DockPanel.Dock" Value="Top"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="StatusBar">
        <Setter Property="DockPanel.Dock" Value="Bottom"></Setter>
    </Style>

    <Style TargetType="DataGrid">
        <Setter Property="AutoGenerateColumns" Value="False"></Setter>
        <Setter Property="CanUserAddRows" Value="False"></Setter>
        <Setter Property="CanUserDeleteRows" Value="False"></Setter>
        <Setter Property="GridLinesVisibility" Value="Vertical"></Setter>
        <Setter Property="VerticalGridLinesBrush" Value="Black"></Setter>
        <Setter Property="HeadersVisibility" Value="Column"></Setter>
    </Style>
</ResourceDictionary>